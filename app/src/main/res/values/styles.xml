<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--没有边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否悬浮-->
        <item name="android:windowIsTranslucent">true</item>
        <!--窗体是否半透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--背景是否模糊显示-->

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="commonDialog_default_anim" parent="@android:style/Animation.Translucent">
    </style>
    <style name="commonDialog_fromButtom_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_from_bottom_anim_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_from_bottom_anim_out</item>
    </style>
</resources>
